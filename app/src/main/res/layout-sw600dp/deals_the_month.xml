<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:card_view2="http://schemas.android.com/apk/res-auto"
    android:id="@+id/uii"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/deal_mainimage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/k">
    </ImageView>
    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/description"
        android:gravity="center"
        android:paddingBottom="25dp"

        >
        <RelativeLayout
            android:id="@+id/rel_desp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="25dp"

            >
            <TextView
                android:id="@+id/deal_prod_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="2dp"
                android:text="Fruits/ Milks /Vegetables"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:textStyle="bold"
                >
            </TextView>
            <TextView
                android:id="@+id/deal_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deal_prod_nm"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="2dp"
                android:text="Fruits/ Milks /Vegetables"
                android:textColor="@color/Black"
                android:textSize="15sp"

                >
            </TextView>
            <TextView
                android:id="@+id/deal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deal_description"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left"
                android:text="$15.00"
                android:textColor="@color/dark_Green"
                android:textSize="20sp"
                android:textStyle="bold"

                >

            </TextView>
            <RatingBar
                android:id="@+id/deal_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deal_price"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:isIndicator="true"
                android:max="5"
                android:rating="5"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                >
            </RatingBar>


        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
