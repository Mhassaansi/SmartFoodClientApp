<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        layout="@layout/category_bar"
        />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Select Booking Date"
        android:textColor="@color/dark_Green"
        android:textSize="15sp">

    </TextView>
    <TextView
        android:id="@+id/Date_Selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/Date"
        android:text="Select Date"
        android:textColor="@color/Black"
        android:layout_marginTop="70dp"
        android:textSize="15sp"
        >
    </TextView>
    <TextView
        android:id="@+id/Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Date_Selection"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Seltect Booking Time"
        android:textColor="@color/dark_Green"
        android:textSize="15sp"
        >
    </TextView>
    <TextView
        android:id="@+id/Time_Selection"
        android:layout_width="match_parent"
      android:layout_height="wrap_content"
        android:layout_below="@id/Date_Selection"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/Time"
        android:text="Seltect Time"
        android:textColor="@color/Black"
        android:textSize="15sp"
        >
    </TextView>
    <TextView
        android:id="@+id/persons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Time"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Total Persons"
        android:textColor="@color/dark_Green"
        android:textSize="15sp"
        >
    </TextView>
    <EditText
        android:id="@+id/tot_persons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Time_Selection"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/persons"
        android:hint="Enter Total Persons"
        android:inputType="number"
        android:textColor="@color/Black"
        android:textSize="10sp"
        android:textStyle="bold"
        >
    </EditText>
    <Button
        android:id="@+id/bookit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tot_persons"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/grren_button"
        android:text="Apply for Booking"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        ></Button>
</RelativeLayout>